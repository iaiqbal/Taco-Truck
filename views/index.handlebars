
<div id = "available">
<ul>
    {{#each tacos}} {{#unless this.picked_up}}
    <li>
        {{this.id}}. {{this.taco_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="picked_up" value="false">
            <button class="btn btn-warning" type="submit">Eat this taco.</button>
        </form>

    </li>
    {{/unless}} {{/each}}
</ul>
</div>

<h2>Fix up a taco</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ta">Taco:</label>
        <input type="text" id="ta" name="taco_name">
    </div>

    <button type="submit">Make this taco!</button>
</form>